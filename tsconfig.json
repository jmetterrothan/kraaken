{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": false,
    "jsx": "react",
    "paths": {
      "@src/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@assets/*": ["src/assets/*"],
    },
    "typeRoots": ["./src/typings/", "./node_modules/@types/"],
    "lib": ["dom", "es2017", "es6", "es7"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
